<div class="project-wrapper section-wrapper">
  <div class="container">
    <h1>
      {{ project.name }}
    </h1>

    <p>
      <strong>Link:</strong> <a href="{{ project.link }}" target="_blank">{{ project.link }}</a>
      <br>
      <strong>Empresa:</strong> <a href="{{ project.company.link }}" target="_blank">{{ project.company.name }}</a>
      <br>
      <strong>Fecha:</strong> {{ project.date }}
    </p>

    <h2>
      Descripción
    </h2>

    <p>
      {{{ project.description }}}
    </p>

    <h2>
      Funciones
    </h2>

    <ul>
      {{#project.functions}}
      <li>{{ description }}</li>
      {{/project.functions}}
    </ul>

    <h2>
      Tecnologías utilizadas
    </h2>

    <ul>
      {{#project.techs}}
      <li class="project-item-batch-{{ type }}">
        {{ name }}:&nbsp;
        {{#items}}
        <span class="badge">{{ name }}</span>
        {{/items}}
      </li>
      {{/project.techs}}
    </ul>
  </div>
</div>