<div class="experience-item">
  <h3>
    {{#image_company_path}}
    {{#company_link}}

    <a href="{{ link }}" target="_blank">
      <img class="img-fluid" src="{{ img_path }}/{{ image_name }}" alt="{{ name }}">
    </a>

    {{/company_link}}
    {{/image_company_path}}
  </h3>

  <div class="media">
    <div class="media-body">
      <p class="experience-item-intro">
        <i class="fa fa-calendar-o" aria-hidden="true"></i>
        {{ date }}

        <br>

        <a href="{{ city.link }}" target="_blank">
          <i class="fa fa-map-marker" aria-hidden="true"></i>
          {{ city.name }}
        </a>

        {{#company_link}}

        <br>

        <a href="{{ link }}" target="_blank">
          <i class="fa fa-external-link" aria-hidden="true"></i>
          Página web.
        </a>

        {{/company_link}}
      </p>
    </div>
  </div>

  <div class="experience-item-batch">
    <h4>PUESTO</h4>

    <ul>
      <li>{{ position }}</li>
    </ul>
  </div>

  <div class="experience-item-batch">
    <h4>FUNCIONES</h4>

    <ul>
      {{#functions}}
      <li>{{ name }}</li>
      {{/functions}}
    </ul>
  </div>

  {{#showTechs}}
  <div class="experience-item-batch">
    <h4>TECNOLOGÍAS</h4>

    {{#techs}}
    {{#items}}
    <span class="badge experience-item-batch-{{ type }}">{{ name }}</span>
    {{/items}}
    {{/techs}}
  </div>
  {{/showTechs}}

  {{#showProjects}}
  <div class="experience-item-batch">
    <h4>PROYECTOS DESTACADOS</h4>

    <div id="glide-slider-{{ id }}" class="glide invisible">
      <div data-glide-el="track" class="glide__track">
        <ul class="glide__slides">
          {{#projects}}

          <li class="glide__slide">
            <a href="{{ link }}" target="{{ target }}" class="project-item"
              style="background-image: url({{ background }})">
              <div class="project-item-name">
                {{ name }}
              </div>
            </a>
          </li>

          {{/projects}}
        </ul>
      </div>

      <div class="glide-controls" data-glide-el="controls[nav]">
        {{#projects}}

        <button class="btn btn-link" data-glide-dir="{{ index }}">
          <i class="fa fa-circle" aria-hidden="true"></i>
        </button>

        {{/projects}}
      </div>
    </div>
  </div>

  {{/showProjects}}
</div>