<div class="experience-item">
    <div class="row">
        <div class="col-md-10">
            <h3 class="media-heading">
                {{ name }}
            </h3>

            <p>
                {{#company_link}}
                <a href="{{ link }}" target="_blank">
                    {{ link }}
                </a>
                <br>
                {{/company_link}}
                {{ date }}
                <br>
                {{ city }}
            </p>

            <div class="experience-item-batch">
                <h4>PUESTO</h4>

                <ul>
                    <li>{{ position }}</li>
                </ul>
            </div>

            <div class="experience-item-batch">
                <h4>FUNCIONES</h4>

                <ul>
                    {{#functions}}
                    <li>{{ name }}</li>
                    {{/functions}}
                </ul>
            </div>

            <div class="experience-item-batch">
                <h4>TECNOLOG√çAS</h4>

                <ul>
                    {{#techs}}
                    <li class="experience-item-batch-{{ type }}">
                        {{ name }}:&nbsp;
                        {{#items}}
                        <span class="badge">{{ name }}</span>
                        {{/items}}
                    </li>
                    {{/techs}}
                </ul>
            </div>

            <div class="experience-item-batch">
                <h4>PROYECTOS DESTACADOS</h4>

                <div id="glide-slider-{{ id }}" class="glide">
                    <div data-glide-el="track" class="glide__track">
                        <ul class="glide__slides">
                            {{#embeds}}
                            <li class="glide__slide">
                                <div class="embed-responsive embed-responsive-16by9">
                                    <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/{{ src }}"
                                        allowfullscreen></iframe>
                                </div>
                            </li>
                            {{/embeds}}

                            {{#projects}}
                            <li class="glide__slide">
                                <a href="{{ link }}" target="{{ target }}">
                                    {{ name }}
                                </a>
                            </li>
                            {{/projects}}
                        </ul>
                    </div>

                    <div data-glide-el="controls">
                        <button data-glide-dir="<"><</button>
                        <button data-glide-dir=">">></button>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-2 d-none d-sm-none d-md-block">
            {{#image_company_path}}
            <a href="{{ link }}" target="_blank">
                <img class="img-fluid" src="{{ img_path }}/{{ image_name }}" alt="{{ name }}">
            </a>
            {{/image_company_path}}
        </div>
    </div>
</div>