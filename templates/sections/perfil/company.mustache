<div class="perfil-company">
    <h3>
        {{ position }} <small>en <strong>{{ name }}</strong></small>
    </h3>

    {{#image.path}}
    <p>
        <img class="img-fluid img-company" src="{{ img_folder }}/{{ image.path }}" alt="{{ image.title }}">
    </p>
    {{/image.path}}

    <p>
        <a href="{{ link }}" target="_blank">{{ link }}</a>
        <br>
        {{ location }}
        <br>
        {{ date }}
    </p>

    <h4>
        Funciones:
