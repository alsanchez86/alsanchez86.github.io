<div class="perfil-company">
    <h3>
        {{ position }} <small>en <strong>{{ name }}</strong></small>
    </h3>

    <div class="perfil-company-section">
        {{#image.path}}
        <p>
            <img class="img-fluid img-company" src="{{ img_folder }}/{{ image.path }}" alt="{{ image.title }}">
        </p>
        {{/image.path}}

        <p>
            <a href="{{ link }}" target="_blank">{{ link }}</a>
            <br>
            {{ location }}
            <br>
            {{ date }}
        </p>
    </div>

    <div class="perfil-company-section">
        <h4>
            Funciones:
        </h4>

        <ul>
            {{#functions}}
            <li>{{.}}</li>
            {{/functions}}
        </ul>
    </div>

    <div class="perfil-company-section">
        <h4>
            Proyectos destacados:
        </h4>

        <ul>
            {{#projects}}
            <li><a href="{{url}}" target="_blank">{{name}}</a></li>
            {{/projects}}
        </ul>
    </div>

    <div class="perfil-company-section">
        <h4>
            Tecnolog√≠as:
        </h4>

        <ul>
            {{#technologies}}
            <li>
                {{type}}:
                {{#list}}
                <span class="badge badge-primary">{{.}}</span>
                {{/list}}
            </li>

            {{/technologies}}
        </ul>
    </div>
</div>